<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edificio">

  <EditText
      android:id="@+id/editText_predio"
      android:layout_width="194dp"
      android:layout_height="40dp"
      android:layout_marginTop="28dp"
      android:ems="10"
      android:hint="Valor del Predio"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="@+id/editText_agua"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="@+id/editText_agua"
      app:layout_constraintTop_toBottomOf="@+id/editText_agua" />

  <EditText
      android:id="@+id/editText_direccionEdificio"
      android:layout_width="194dp"
      android:layout_height="40dp"
      android:layout_marginTop="28dp"
      android:ems="10"
      android:hint="Dirección"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="@+id/editText_nombreedificio"
      app:layout_constraintHorizontal_bias="0.1"
      app:layout_constraintStart_toStartOf="@+id/editText_nombreedificio"
      app:layout_constraintTop_toBottomOf="@+id/editText_nombreedificio" />

  <EditText
      android:id="@+id/editText_agua"
      android:layout_width="194dp"
      android:layout_height="40dp"
      android:layout_marginTop="28dp"
      android:ems="10"
      android:hint="¿Tiene Agua Potable?"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="@+id/editText_direccionEdificio"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="@+id/editText_direccionEdificio"
      app:layout_constraintTop_toBottomOf="@+id/editText_direccionEdificio" />

  <EditText
      android:id="@+id/editText_nombreedificio"
      android:layout_width="194dp"
      android:layout_height="40dp"
      android:ems="10"
      android:hint="Nombre"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.04" />

  <Button
      android:id="@+id/btn_insertarAlb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="INSERTAR EDIFICIO"
      app:layout_constraintEnd_toEndOf="@+id/editText_predio"
      app:layout_constraintHorizontal_bias="0.517"
      app:layout_constraintStart_toStartOf="@+id/editText_predio"
      app:layout_constraintTop_toBottomOf="@+id/editText_predio" />

  <ListView
      android:id="@+id/listview_album"
      android:layout_width="406dp"
      android:layout_height="320dp"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/btn_insertarAlb"
      tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>