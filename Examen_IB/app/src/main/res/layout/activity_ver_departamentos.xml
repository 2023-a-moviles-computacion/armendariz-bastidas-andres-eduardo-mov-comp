<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verDepartamentos">

    <ListView
        android:id="@+id/listView_departamento"
        android:layout_width="409dp"
        android:layout_height="569dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_albumVerDepartamentos"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/tv_albumVerDepartamentos"
        app:layout_constraintTop_toBottomOf="@+id/tv_albumVerDepartamentos" />

    <TextView
        android:id="@+id/tv_albumVerDepartamentos"
        android:layout_width="180dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/btn_crearDepartamento"
        android:layout_width="214dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:text="CREAR DEPARTAMENTO"
        app:layout_constraintBottom_toBottomOf="@+id/tv_albumVerDepartamentos"
        app:layout_constraintStart_toEndOf="@+id/tv_albumVerDepartamentos"
        app:layout_constraintTop_toTopOf="@+id/tv_albumVerDepartamentos"
        app:layout_constraintVertical_bias="0.473" />

</androidx.constraintlayout.widget.ConstraintLayout>